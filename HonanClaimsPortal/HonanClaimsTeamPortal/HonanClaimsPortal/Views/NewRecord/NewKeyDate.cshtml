        $.LoadingOverlay("hide");
        generateKeyDateGrid();

        if ($('#KeyDateDetailModal').length > 0) {
            $('#KeyDateDetailModal').modal('hide');
        }
    }

    function CancelKCD_Date() {
        $("#H_Claimsid_KCD_Date").val("");
